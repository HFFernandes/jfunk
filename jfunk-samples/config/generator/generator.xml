<!DOCTYPE configuration SYSTEM "generator.dtd">
<configuration>
	<format>
		<date>
			<pattern>dd.MM.yyyy</pattern>
			<locale>
				<language>de</language>
				<country>de</country>
			</locale>
		</date>
		<number>
			<pattern>0.00</pattern>
			<locale>
				<language>en</language>
				<country>US</country>
			</locale>
		</number>
	</format>
	<charsets>
		<charset id="iso-8859-1">
			<encoding>iso-8859-1</encoding>
			<good_expression>[^\x00-\x1F\x7F\x80-\x9F]</good_expression>
			<bad_expression>[[^\x00-\x1F\x7F\x80-\x9F\s][ ]]</bad_expression>
		</charset>
	</charsets>
	<controls>
		<control id="default.control" class="EnumerationControl">
			<case type="min"/>
			<case type="avg"/>
			<case type="max"/>
		</control>
		<control id="linear.control" class="LinearControl" shuffle="true"/>
	</controls>
	<fields>
		<field id="text" class="InverseExpression">
			<control_ref id="default.control"/>
			<expression>[A-Z][a-züöä]*</expression>
		</field>
		<field id="integerNumber" class="InverseExpression">
			<control_ref id="default.control"/>
			<expression>[0-9]*</expression>
		</field>
		<field id="doubleNumber" class="InverseExpression">
			<control_ref id="default.control"/>
			<expression>[0-9]*[.][0-9]*</expression>
		</field>
		<field id="select">
			<control_ref id="linear.control"/>
			<value>red</value>
			<value>green</value>
			<value>blue</value>
		</field>
	</fields>
	<constraints charset_id="iso-8859-1">
		<constraint id="google.all" class="Complex">
			<constraint id="google.searchTerm">
				<field_ref id="select"/>
			</constraint>
		</constraint>
		<constraint id="example1.all" class="Complex">
			<constraint id="example1.name" class="RangeConstraint">
				<min>1</min>
				<max>30</max>
				<field_ref id="text"/>
			</constraint>
			<constraint id="example1.firstname" class="Optional">
				<constraint class="RangeConstraint">
					<min>1</min>
					<max>30</max>
					<field_ref id="text"/>
				</constraint>
			</constraint>
			<constraint id="example1.type">
				<field_ref id="select"/>
			</constraint>
			<constraint id="example1.number">
				<field class="InverseExpression">
					<control_ref id="default.control"/>
					<expression>[0-9]{3}-[0-9]{4,10}</expression>
				</field>
			</constraint>
			<constraint id="example1.uuid" class="UUIDConstraint">
				<control_ref id="linear.control"/>
			</constraint>
		</constraint>
		<constraint id="guestbook.all" class="Complex">
			<constraint id="guestbook.text" class="RangeConstraint">
				<min>1</min>
				<max>100</max>
				<field_ref id="text"/>
			</constraint>
		</constraint>
		<constraint id="forminput.all" class="Complex">
			<constraint id="forminput.localeSelect">
				<field>
					<control_ref id="linear.control"/>
					<!-- Countries using the comma as the decimal separator are excluded to keep the example simple -->
					<value>0</value>
					<!--<value>1</value>-->
					<!--<value>2</value>-->
					<value>3</value>
					<value>4</value>
					<!--<value>5</value>-->
					<value>6</value>
					<!--<value>7</value>-->
					<value>8</value>
					<!--<value>9</value>-->
					<value>10</value>
				</field>
			</constraint>
			<constraint id="forminput.stringProperty" class="RangeConstraint">
				<min>1</min>
				<max>40</max>
				<field_ref id="text"/>
			</constraint>
			<constraint id="forminput.integerProperty">
				<field class="NumberField">
					<format>
						<number>
							<pattern>0</pattern>
							<locale>
								<language>de</language>
								<country>de</country>
							</locale>
						</number>
					</format>
					<control_ref id="default.control"/>
					<min>1</min>
					<max>2147483647</max>
					<expression>[\-0-9\s]+</expression>
				</field>
			</constraint>
			<constraint id="forminput.doubleProperty">
				<field class="NumberField">
					<!-- Keep numbers small to avoid problems with digit grouping -->
					<control_ref id="default.control"/>
					<min>-999.99</min>
					<max>999.99</max>
				</field>
			</constraint>
			<constraint id="forminput.booleanProperty">
				<field>
					<control_ref id="linear.control"/>
					<value>true</value>
					<value>false</value>
				</field>
			</constraint>
			<constraint id="forminput.integerInRangeProperty">
				<field class="NumberField">
					<format>
						<number>
							<pattern>0</pattern>
							<locale>
								<language>de</language>
								<country>de</country>
							</locale>
						</number>
					</format>
					<control_ref id="default.control"/>
					<min>0</min>
					<max>100</max>
					<expression>[\-0-9\s]+</expression>
				</field>
			</constraint>
			<constraint id="forminput.urlProperty" class="RangeConstraint">
				<min>15</min>
				<max>40</max>
				<field class="InverseExpression">
					<control_ref id="default.control"/>
					<expression>http://www\.[a-z]+\.[a-z]{2,4}</expression>
				</field>
			</constraint>
			<constraint id="forminput.phoneNumberUS" class="RangeConstraint">
				<min>14</min>
				<max>14</max>
				<field class="InverseExpression">
					<control_ref id="default.control"/>
					<expression>\(\d\d\d\) \d\d\d-\d\d\d\d</expression>
				</field>
			</constraint>
			<constraint id="forminput.numberRadioChoice">
				<field>
					<control_ref id="linear.control"/>
					<value>0</value>
					<value>1</value>
					<value>2</value>
				</field>
			</constraint>
			<constraint id="forminput.numbersGroup">
				<field>
					<control_ref id="linear.control"/>
					<value>radio0</value>
					<value>radio1</value>
					<value>radio2</value>
				</field>
			</constraint>
		</constraint>
	</constraints>
</configuration>
